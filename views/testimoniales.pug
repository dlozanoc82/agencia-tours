extends ./layouts/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        
        .row.testimoniales 
            
            each testimonial in testimoniales 
                .col-md-6.col-lg-4.mb-4 
                    .card
                        .card-body 
                            blockquote.blockquote
                            p.mb-0 
                                | #{testimonial.mensaje}
                            footer.blockquote-footer
                                | #{testimonial.nombre}


        .row.justify-content-center
            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial

                if (errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.col.justify-content-center
                .col-md-8 
                    form(action="/testimoniales" method="POST")
                        .form-group 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="input form-control", value= nombre)
                        .form-group 
                            label(for="correo") Correo Electronico
                            input#correo(type="email", placeholder="Tu correo", name="correo", class="input form-control", value= correo)
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje", class="area form-control", placeholder="mensaje", rows=3)= mensaje
                        input.btn.btn-success.btn-block(type="submit")